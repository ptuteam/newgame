<fest:template xmlns:fest="http://fest.mail.ru" context_name='user'>
<div class="b-user">
	<div class="b-user__username">
		<fest:value output="text">
        	user.get('first_name')      
        </fest:value>
        <fest:space/>
        <fest:value output="text">
        	user.get('last_name')      
        </fest:value>
    </div>
    <div class="b-avatar">
     	<img class="b-avatar__img" src="{user.get('avatar')}"></img>
    </div>
</div>
</fest:template>