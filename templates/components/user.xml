<fest:template xmlns:fest="http://fest.mail.ru" context_name='user'>
<div class="container-user">
	<div class="container-user__user">
		<fest:value output="text">
        	user.get('first_name')      
        </fest:value>
        <fest:space/>
        <fest:value output="text">
        	user.get('last_name')      
        </fest:value>
    </div>
    <div class="container-avatar">
     	<img class="container-avatar__avatar" src="{user.get('avatar')}"></img>
    </div>
</div>
</fest:template>