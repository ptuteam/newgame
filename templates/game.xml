<fest:template xmlns:fest="http://fest.mail.ru" context_name='json'>
	<fest:if test="json.app.session.get('loggedIn')">
		<fest:include context="json.app.session.user" src="user.xml"/>
	</fest:if>

	<div class="container-game">
		<div class="game-player">
			<div class="player-score">
				<div class="player-score__points">15</div>
			</div>
			<div class="player-block">
       			<div class="player-block-avatar">
       				<img class="player-block-avatar__image" src="{json.app.session.user.get('avatar')}"/>
       			</div>
       			<div class="player-block__username">
					<fest:value output="text">
	        			json.app.session.user.get('first_name')      
	        		</fest:value>
	       		</div>
			</div>
		</div>
		<div class="game-enemy">
			<div class="enemy-score">
				<div class="enemy-score__points">10</div>
			</div>
			<div class="enemy-block">
				<div class="enemy-block-avatar">
					<img class="enemy-block-avatar__image" src="http://api.adorable.io/avatar/as"/>
				</div>
				<div class="enemy-block__username">POLINA</div>
			</div>
		</div>
		<div class="versus-block">VS</div>
	</div>
</fest:template>