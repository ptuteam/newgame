<fest:template xmlns:fest="http://fest.mail.ru" context_name='json'>
	<fest:if test="json.app.session.get('loggedIn')">
	<div class="container-user">
		<div class="container-user__user">
			<fest:value output="text">
            	json.app.session.user.get('first_name')      
            </fest:value>
            <fest:space/>
            <fest:value output="text">
            	json.app.session.user.get('last_name')      
            </fest:value>
        </div>
        <div class="container-avatar">
         	<img class="container-avatar__avatar" src="{json.app.session.user.get('avatar')}"></img>
        </div>
    </div>
	</fest:if>
	<fest:if test="!json.arg">
	<div class="container-header">
		<h1 class="container-header__title">Игра</h1>
	</div>
	</fest:if>
	<fest:if test="json.arg">
	<div class="container-content">
		<div class="content-question">
			<fest:value output="text">json.arg.question</fest:value>
		</div>
		<div class="content-answers">
			<fest:for iterate="json.arg.answers" index="i">
				<div class="container-menu__menu-button js-send">
					<fest:value output="text">json.arg.answers[i]</fest:value>
				</div>
			</fest:for>
		</div>	
	</div>
	</fest:if>
	<fest:if test="!json.arg">
	<div class="container-menu">
		<div class="container-menu__menu-button js-connect">Соединиться</div>
		<a href="#" class="container-menu__menu-button js-back">Назад</a>
	</div>
	</fest:if>
</fest:template>