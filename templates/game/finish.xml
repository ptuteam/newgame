<fest:template xmlns:fest="http://fest.mail.ru" context_name='json'>
<div class="container-content">
	<div class="finish-title">Победитель</div>
	<div class="finish-winner">
		<div class="finish-winner__name">
			<fest:value output="text">
        		json.name + ' ' + json.lastname    
        	</fest:value>
        </div>
        <div class="finish-winner__score">
			<fest:value output="text">
        		json.score    
        	</fest:value>
        </div>
		<div class="finish-winner-avatar">
			<img class="finish-winner-avatar__avatar" src="{json.avatar}"></img>
		</div>
		<div class="modal__menu-button js-return">Главное меню</div>
	</div>	
</div>
</fest:template>