<fest:template xmlns:fest="http://fest.mail.ru">
<div class="container">
    <div class="container-header">
        <h1 class="container-header__title">Вход</h1>
    </div>
    <div class="container-form">
        <form class="form-login" method="POST" action="/api/v1/auth/signin" id="login_form">
            <input class="form-login__input" name="email" type="email" placeholder="Логин" required="" id='input_email'/>
            <input class="form-login__input" name="password" type="password" placeholder="Пароль" required="" id='input_pass'/>
        </form>
    </div>
    <div class="container-menu">
    	<div class="container-menu__menu-button js-submit">Войти</div>
        <a href="#" class="container-menu__menu-button js-back">Назад</a>
    </div>
</div>
</fest:template>